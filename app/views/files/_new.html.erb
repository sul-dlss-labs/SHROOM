<%= form_with url: files_path do |form| %>
    <%= form.label :file, 'Upload article:', class: 'form-label' %>
    <%= form.file_field :file, required: true, accept: 'application/pdf', class: 'form-control', direct_upload: true %>

    <%= form.label :doi, 'DOI (optional):', class: 'form-label mt-2' %>
    <%= form.text_field :doi, class: 'form-control', pattern: 'https://doi.org/10.\d+/.+' %>
    <div class="form-text">For example: https://doi.org/10.1177/1940161218781254</div>

    <%= form.submit 'Submit', class: 'btn btn-primary mt-3', data: { turbo_submits_with: 'Working...' } %>
<% end %>
