<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to('Home', '/') %></li>
    <li class="breadcrumb-item"><%= link_to @work.title, work_path(@work) %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit article</li>
  </ol>
</nav>

<%= render FormLayoutComponent.new(work_file: @work_file) do |component| %>
    <% component.with_form do %>
        <%= form_with model: @work_form, method: 'patch', url: work_path(@work), builder: ShroomFormBuilder do |form| %>
            <%= render 'form', form:, work_form: @work_form %>
        <% end %>
    <% end %>
<% end %>
